@page
@model Bakalauras.Pages.Mokytis.ThemeMenuModel
@{
    ViewData["Title"] = "Home page";
}
<style>
    .card{
        margin-bottom: 1px;
    }
    h1 {
        text-align: center;
    }
    h2{
        margin-left: 10px;
    }
    .text-quiz {
        display: inline-block;
        margin-right: 10px;
    }
    .te {
        float: right;
        width: 120px;
    }
</style>
<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 mx-auto">
                <h1>@Model.Title</h1>
                <div class="card">
                    <div class="container" style="margin-top: 15px;">
                        <h2><i class="bi bi-1-circle-fill"></i> Spresk!</h2>
                    </div>
                    <hr />
                    <div class="container">
                        <p class="text-quiz"><b>@Model.Text</b></p>
                        <button asp-route-Title="@Model.Title" asp-page-handler="Start" id="start" class="btn btn-info btn-lg te">Pradėti</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>