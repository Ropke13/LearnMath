@page
@model Bakalauras.Pages.Uzdaviniai.MyTaskListModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    th {
        text-align: center;
    }

    .tttt {
        margin-top: 15px;
        text-align: center;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-12 mx-auto">
            <h1 style="text-align:center;">Mano Uždaviniai</h1>

            <div class="card">
                <a class="btn btn-info btn-lg te" style="margin-top: 15px;margin-bottom: 15px; margin-left: 15px; margin-right: 15px;" asp-page="/Uzdaviniai/CreateTask">Sukurti nauja uždavinį </a>
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Uždavinys</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td><p class="tttt"><span>Išspreskite lygti: \(y = \frac{a}{b} + c^2 + d\)</span></p></td>
                            <td><a class="btn btn-success btn-lg te" style="margin-bottom: 15px; margin-left: 15px; margin-right: 15px;" asp-page="/Mokytis/SolveTask">Redaguoti </a></td>
                            <td><a class="btn btn-danger btn-lg te" style="margin-bottom: 15px;" asp-page="/Mokytis/SolveTask">Pašalinti </a></td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td><p class="tttt"><span>Išspreskite integrala: Integral \(\int_{a}^{b} x^2 \,dx\) inside text</span></p></td>
                            <td><a class="btn btn-success btn-lg te" style="margin-bottom: 15px; margin-left: 15px; margin-right: 15px;" asp-page="/Mokytis/SolveTask">Redaguoti </a></td>
                            <td><a class="btn btn-danger btn-lg te" style="margin-bottom: 15px;" asp-page="/Mokytis/SolveTask">Pašalinti </a></td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td style="width: 900px"><p class="tttt"><span>Išspreskite lygti: \(y = \frac{a}{b} + c^2 + d\)</span></p></td>
                            <td><a class="btn btn-success btn-lg te" style="margin-bottom: 15px; margin-left: 15px; margin-right: 15px;" asp-page="/Mokytis/SolveTask">Redaguoti </a></td>
                            <td><a class="btn btn-danger btn-lg te" style="margin-bottom: 15px;" asp-page="/Mokytis/SolveTask">Pašalinti </a></td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
