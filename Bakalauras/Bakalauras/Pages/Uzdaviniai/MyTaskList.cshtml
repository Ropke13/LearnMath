@page
@model Bakalauras.Pages.Uzdaviniai.MyTaskListModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    th {
        text-align: center;
    }

    .tttt {
        margin-top: 15px;
        text-align: center;
    }
</style>

<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mx-auto">
                <h1 style="text-align:center;">Mano Uždaviniai</h1>

                <div class="card">
                    <a class="btn btn-info btn-lg te" style="margin-top: 15px;margin-bottom: 15px; margin-left: 15px; margin-right: 15px;" asp-page="/Uzdaviniai/CreateTask">Sukurti nauja uždavinį </a>
                    @if (Model._Task.Count() > 0)
                    {
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Uždavinys</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int i = 1; }
                                @foreach (var item in Model._Task)
                                {
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td style="text-align: center;"><p class="tttt"><span>@Html.DisplayFor(f => item.TaskString)</span></p></td>
                                        <td style="text-align: right; column-width: 300px;">
                                            <a class="btn btn-success btn-lg te" style="margin-bottom: 15px; margin-left: 15px; margin-right: 15px;" asp-page="/Mokytis/SolveTask">Redaguoti </a>
                                            <button class="btn btn-danger btn-lg te" style="margin-bottom: 15px;" asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Ar tikrai norite pašalinti uždavinį?')">Pašalinti </button>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <label>Neturite uždavinių</label>
                    }
                </div>

            </div>
        </div>
    </div>
</form>